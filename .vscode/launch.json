{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Debug with args",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/OSSP_Project",
            "args": ["${workspaceFolder}/test.bin"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe"
        },
        {
            "name": "C Debug (input args)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/OSSP_Project",
            "args": ["${input:filename}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe"
        },
        {
            "name": "C Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/OSSP_Project",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build"
        }
    ],
    "inputs": [
        {
            "id": "filename",
            "type": "promptString",
            "description": "Enter filename for debugging",
            "default": "task1.bin"
        }
    ]
}