{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Custom Task",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/OSSP_Project",
            "args": ["${input:taskNumber}", "${input:customArgs}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe"
        }
    ],
    "inputs": [
        {
            "id": "taskNumber",
            "type": "promptString",
            "description": "Enter task number (1-8)",
            "default": "1"
        },
        {
            "id": "customArgs",
            "type": "promptString",
            "description": "Enter arguments (for task 1: -f filename, for others: leave empty)",
            "default": "-f test.bin"
        }
    ]
}